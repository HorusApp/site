{{#each layouts}}
      {{! Genreal class for icons }}
      .{{classname}}
        text-indent 100%
        white-space nowrap
        overflow hidden
        display inline-block
        width 0
        height 0

  {{#each sprites}}
    {{#if dpi}}
      @media
      only screen and ( -webkit-min-device-pixel-ratio: {{ratio}} ),
      only screen and ( min-resolution: {{dpi}}dpi )
        [class*='{{../../classname}}']
          background-image url( '{{escimage url}}' )
          background-size {{baseWidth}}px {{baseHeight}}px
    {{/if}}

    {{#unless dpi}}
      .{{../../classname}}
        background-image url( '{{escimage url}}' )
    {{/unless}}
  {{/each}}

  {{! Classes for each icon found in the sprites folder }}
  {{#each layout.items}}
    .{{../classname}}.{{meta.name}}
      background-position -{{baseDim x}}px -{{baseDim y}}px
      width {{baseDim width}}px
      height {{baseDim height}}px
  {{/each}}
{{/each}}
